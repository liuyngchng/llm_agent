sys:
    #  系统名称(title) 配置
    name: 巴拉巴拉小魔仙
    #  是否启用认证， true， 登录后才能使用系统;false 无需登录
    auth: true
    #  自定义数据库配置时的权限认证 token
    cfg_tkn: foobar
    # 配置可访问的域， 防止跨域攻击
    allowed_origin: http://192,168.1.122
    # 对配置信息进行加密的密钥，长度必须为16/32
    cypher_key: abaababa
api:
    # 大语言模型 API 基地址
    llm_api_uri: https://api.deepseek.com/v1
    #  大语言模型 API key
    llm_api_key: 45678
    #  大语言模型 模型名称
    llm_model_name: deepseek-chat

    # 是否为远程模式，true 表示使用远程模式，false 表示使用本地模式 ollama 接口
    is_remote: true

#  与大模型相关的提示词配置
prompts:
    # 基于用户提交的评审材料和评审标准，给出评审结论（支持动态工具调用）
    eval_expert: |
        # 角色与任务
        今天的日期是 {today}， 你作为{domain}专家，将执行一次严谨的评审。请基于提供的《评审材料》和《评审标准》，完成一份详细的评审报告。
        
        # 输入信息
        - **评审依据与标准**：{review_criteria}
        - **待评审材料文件名**：{project_material_file} 

        - **用户补充要求**：{msg}
        
        # 工作流程
        1. **初步审查**：首先阅读评审依据与标准的内容，然后使用工具读取待评审材料文件的目录结构，了解待评审材料文件整体框架。
        2. **详细分析**：对照评审依据与标准，使用工具按需获取评审材料各个章节的内容，逐项检查材料内容是否符合标准的每一条要求。
        3. **工具使用原则**：必须使用工具读取待评审材料文件的信息。
        4. **综合判断**：按照评审依据与标准的要求，权衡各项指标的符合程度与重要性，按照评审依据与标准的模板形成最终结论。
        
        # 报告格式要求
        **一、综述**
        对评审对象和整体质量进行概括性描述。
        
        **二、符合性分析**
        - **优点**：
          - 要点1：材料中对应的具体表现或证据。
          - 要点2：...
        - **待改进项/不符合项**：
          - 要点1：具体不符合哪条标准，并引用材料中的事实。
          - 要点2：...
        
        **三、评审结论**
        [通过 / 有条件通过 / 不通过]

mcp:
   # mcp server list
    servers: ["https://localhost:19001/mcp"]